{
  "version": 2,
  "name": "capora",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "projectSettings": {
          "framework": "nextjs"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://capora-backend.onrender.com"
  },
  "functions": {
    "frontend/pages/api/*.js": {
      "runtime": "nodejs18.x"
    }
  }
} 